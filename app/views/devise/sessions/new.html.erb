<!--Body content-->
<div class="row" style="border-style:solid;
border-width:15px;border-bottom-width: 0px; border-color: rgba(0,255,255,0.2);">
	<div class="span4"></div>
	<div class="span4">
<h2>Sign in</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.input :email, :autofocus => true %>
  <%= f.input :password %>
  <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
</div>	
	<div class"span4"></div>
</div>
